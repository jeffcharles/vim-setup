set autoindent
set background=dark
set expandtab
set ignorecase
set incsearch
set nocompatible
set shiftwidth=4
set smartcase
set smartindent
set tabstop=4
set showmatch
set vb t_vb=
set ruler
set syntax=on

autocmd FileType html setlocal shiftwidth=2 | setlocal tabstop=2
autocmd FileType scala setlocal shiftwidth=2 | setlocal tabstop=2
autocmd FileType ruby setlocal shiftwidth=2 | setlocal tabstop=2
